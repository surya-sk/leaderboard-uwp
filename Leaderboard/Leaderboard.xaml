<Page
    x:Class="Leaderboard.Leaderboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Leaderboard"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:data="using:Leaderboard"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="GameTitle" FontSize="50"/>



        <controls:DataGrid AutoGenerateColumns="False" ItemsSource="{x:Bind PlayerStats}" Grid.Row="1">
            <controls:DataGrid.Columns>
                <controls:DataGridTemplateColumn Header="Name" Width="*">
                    <controls:DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate x:DataType="data:PlayerStat">
                            <TextBox Text="{x:Bind PlayerName}"/>
                        </DataTemplate>
                    </controls:DataGridTemplateColumn.CellEditingTemplate>
                </controls:DataGridTemplateColumn>
                <controls:DataGridTemplateColumn Header="Score" Width="*">
                    <controls:DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate x:DataType="data:PlayerStat">
                            <muxc:NumberBox Value="{x:Bind PlayerScore}"/>
                        </DataTemplate>
                    </controls:DataGridTemplateColumn.CellEditingTemplate>
                </controls:DataGridTemplateColumn>
            </controls:DataGrid.Columns>
        </controls:DataGrid>



    </Grid>
</Page>
